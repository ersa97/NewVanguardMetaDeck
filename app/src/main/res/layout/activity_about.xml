<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.AboutActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imgbackground"
        android:layout_width="wrap_content"
        android:layout_height="225dp"
        android:src="@drawable/vgbackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profpic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/dicodingprofpic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imgbackground"
        app:layout_constraintTop_toBottomOf="@id/imgbackground"
        />
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Ersa Arkhab"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/profpic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:fontFamily="@font/audiowide"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ersa1997@gmail.com"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:fontFamily="@font/audiowide"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>